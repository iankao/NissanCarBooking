<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nissan.nissancar.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/titlebar_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        
        <ImageButton 
            android:id="@+id/nissan_title_bar_back_button"
            android:layout_width="100px"
            android:layout_height="120px"
            android:background="@drawable/icon_back"/>
        
        <View 
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#333333"
            android:layout_toRightOf="@id/nissan_title_bar_back_button"/>
        
        <TextView 
            android:id="@+id/function_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_toRightOf="@id/divider"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            android:text="title"
            android:layout_gravity="bottom|center_horizontal"/>
        
    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/function_content_fl"
        android:layout_below="@id/titlebar_fl"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        
    </FrameLayout>

</RelativeLayout>
