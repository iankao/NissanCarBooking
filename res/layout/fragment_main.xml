<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nissan.nissancar.MainActivity$PlaceholderFragment" >

    <Button 
        android:id="@+id/btn001"
        android:text="預約保修"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn002"
        android:text="愛車資訊"
        android:layout_below="@id/btn001"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn003"
        android:text="我的紅利"
        android:layout_below="@id/btn002"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn004"
        android:text="保修紀錄"
        android:layout_below="@id/btn003"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn005"
        android:text="服務據點"
        android:layout_toRightOf="@id/btn001"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn006"
        android:text="最新消息"
        android:layout_below="@id/btn005"
        android:layout_toRightOf="@id/btn001"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn007"
        android:text="我的保單"
        android:layout_below="@id/btn006"
        android:layout_toRightOf="@id/btn001"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button 
        android:id="@+id/btn008"
        android:layout_below="@id/btn007"
        android:layout_toRightOf="@id/btn001"
        android:text="保修進度查詢"
        android:layout_width="150dp"
        android:layout_height="50dp"/>

</RelativeLayout>
